{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Chrome (Front)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "outFiles": ["${workspaceFolder}/.next/**/*.js"]
    },
    {
      "name": "Next.js: Node (Server)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
